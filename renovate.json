{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "dependencyDashboard": true,
  "extends": [
    "config:best-practices"
  ],
  "labels": [
    "ready for review"
  ],
  "automerge": true,
  "ignoreTests": true,
  "customManagers": [
    {
      "datasourceTemplate": "docker",
      "fileMatch": [
        "^app/(.*)-deployment.yaml$"
      ],
      "matchStrings": [
        "image: (.*)/(?<depName>.*?)/(?<currentValue>[^@]+)(@(?<currentDigest>sha256:[a-f0-9]+))?"
      ],
      "autoReplaceStringTemplate": "image: {{{depName}}}:{{{newValue}}}{{#if newDigest}}@{{{newDigest}}}{{/if}}"
    }
  ],
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "radam",
      "encrypted": {
        "password": ""
      },
    }
  ],
  "packageRules": [
    {
      "description": "use fix scope for renovate updates",
      "matchPackageNames": ["renovatebot/renovate"],
      "semanticCommitType": "fix"
    },
    {
      "description": "Automerge renovate updates",
      "matchPackageNames": ["renovatebot/renovate"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    }
  ]
}
